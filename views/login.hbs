    <div class="login">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-group">
                    <span class="input-group-addon"><span><i class="far fa-envelope"></i></span></span>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <span class="input-group-addon"><span><i class="fas fa-key"></i></span></span>
                    <input type="password" name="password" class="form-control" id="psw" placeholder="Enter password" minlength="6" required>
                </div>
            </div>
            <div class="form-group" style="text-align: center;"> 
                <input class="btn btn-default" type="submit" value="Login">
            </div>
        </form>
    </div>

